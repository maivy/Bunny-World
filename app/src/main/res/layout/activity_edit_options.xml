<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_margin="5sp"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="edu.stanford.cs108.bunnyworld.EditOptions">



    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Page To Edit :"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <EditText
            android:id="@+id/pageToEdit"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <Button
            android:onClick="editPage"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EDIT PAGE"/>
    </LinearLayout>
    <Button
        android:onClick="viewAllPages"
        android:text="View ALL PAGES"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:onClick="addPage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ADD NEW PAGE"/>

    <TextView
        android:id="@+id/pagesTitleInEdit"
        android:layout_marginTop="5sp"
        android:text="Names of All Pages :"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>
    <ListView
        android:id="@+id/editViewPages"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></ListView>
</LinearLayout>
